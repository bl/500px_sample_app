<% @photos.each_slice(4) do |slice| %>
  <div class="row">
    <% slice.each do |photo| %>
      <div class="col-ms-3">
        <%= render photo %>
      </div>
    <% end %>
  </div>
<% end %>

<% if @page > 1 %>
  <%= link_to "Previous Page", photos_path(page: @page-1) %>
<% end %>
<%= link_to "Next Page", photos_path(page: @page+1) %>
